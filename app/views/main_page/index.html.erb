<main>

  <div class="container " id="featured-3">
    <h2 class="pb-2 border-bottom"> <%= t('homepage.mostLiked') %> </h2>
    <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
    <% @reviewsRated.each do |review| %>
      <div class="col d-flex align-items-start">
        
        <div>
          <h2><%= t('homepage.reviewOn') + ' "' + review.name + '"' %>
          <%= raw review.tags.map(&:name).map{|t| link_to t, tag_path(t), class: "btn btn-primary btn-sm"}.join(' ')%>
          </h2>
          <p><%= t('homepage.avg') %>: <%= review.user_rating.average('score').to_d %></p>
          
          <p><% if review.content.to_plain_text.length < 500 %> 
          <%= review.content %>
          <%else%>
          <%= review.content.to_plain_text[0..500] + '...' %>
          <%end%></p>
          
          <%= link_to t('homepage.readMore'), review, class:"btn btn-primary" %> 
          
        </div>
      </div>
    <% end%>
      
    </div>
  </div>

  <div class="b-example-divider"></div>

  <div class="container " id="hanging-icons">
    <h2 class="pb-2 border-bottom"><%= t('homepage.lastAdded') %></h2>
    <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
      <% @reviewsLast.each do |review| %>
      <div class="col d-flex align-items-start">
      
        <div>
          <h2><%= t('homepage.reviewOn') + ' "' + review.name + '"' %></h2>
          <%= raw review.tags.map(&:name).map{|t| link_to t, tag_path(t), class: "btn btn-primary btn-sm"}.join(' ')%>
          
          <p><%= t('homepage.avg') %>: <%= review.user_rating.average('score').to_d %></p>
          
          <p><% if review.content.to_plain_text.length < 500 %> 
          <%= review.content %>
          <%else%>
          <%= review.content.to_plain_text[0..500] + '...' %>
          <%end%></p>
          
          <%= link_to t('homepage.readMore'), review, class:"btn btn-primary" %>
          
        </div>
      </div>
      <% end%>
    </div>
  </div>

  

  <div class="b-example-divider"></div>

  <div class="container " id="icon-grid">
    <h2 class="pb-2 border-bottom"><%= t('homepage.tags') %></h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-6 g-6 py-1">
<% @tags.reverse.each do |tag|%>
      <div class="col d-flex align-items-start">
        <svg class="bi text-muted flex-shrink-0 me-3" width="1.75em" height="1.75em"><use xlink:href="#bootstrap"/></svg>
        <div>
          <h4 class="fw-bold mb-0"><%= link_to tag.name, tag_path(tag.name), class: "btn btn-primary btn-lg"%></h4>
          
        </div>
      </div>
<%end%>
      
    </div>
  </div>
</main>
