<%= form_with(model: review) do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div class="row g-3 align-items-center">
  <div class="col-auto">
    <label for="chooseCategory" class="col-form-label">Choose review's category:</label>
  </div>
  <div class="col-auto">
  <select class='form-control' name='review[category_id]'>
  <% @categories.each do |category|%>
<option value="<%= category.id %>"<%if @review.category_id == category.id%>selected=selected<%end%>><%= category.name %></option>
<%end%>
</select>
  </div>
</div>
<br />
<div class="row g-3 align-items-center">
  <div class="col-auto">
    <label class="col-form-label">Title of product</label>
  </div>
  <div class="col-auto">
  <%= form.text_field :name,  class:"form-control"%>
    
  </div>
  
</div>


  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating %>
  </div>
  
<% if current_user.admin %>
  
  <div class="field">
    <%= form.label :authorEmail %>
    <%= form.select :authorEmail, @users %>
  </div>
    
  
<%end%>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
