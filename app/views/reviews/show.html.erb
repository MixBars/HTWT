<p id="notice"><%= notice %></p>

<p>
  <strong>Group:</strong>
  <%= @review.group %>
</p>

<p>
  <strong>Name:</strong>
  <%= @review.name %>
</p>

<p>
  <strong>Body:</strong>
  <%= @review.body %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @review.rating %>
</p>

<p>
  <strong>Created by:</strong>
  <%= link_to @review.authorEmail[0..@review.authorEmail.index('@')-1], @user %>
</p>



